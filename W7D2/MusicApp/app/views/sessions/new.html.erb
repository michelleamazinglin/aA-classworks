<h1>Login</h1>

<form action="<%= session_url %>" method="POST">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label>EMAIL:
    <input 
      type="text" 
      name="user[email]">
  </label>

  <label for="password">PASSWORD: </label>
  <input 
    type="password" 
    name="user[password]" 
    id="password" 
  >

  <input type="submit" value="Login">
</form>