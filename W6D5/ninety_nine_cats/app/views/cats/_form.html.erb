<% if is_edit %>
  <% action = cat_url(cat) %>
  <% button_text = "Update Cat" %>
<% else %>
  <% action = cats_url %>
  <% button_text = "Create Cat" %>
<% end %>

<form action="<%= action %>" method="POST">
  <% if is_edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>

  <label>NAME:
    <input 
      type="text" 
      name="cat[name]" 
      value="<%= cat.name %>">
  </label>
  <br>
  <label for="sex">SEX:</label>
  <input 
    type="radio" 
    name="cat[sex]" 
    id="sex" 
    value="<%= cat.sex %>">
    M
 
  <input  
    type="radio" 
    name="cat[sex]" 
    id="sex" 
    value="<%= cat.sex %>">
    F

  <br>
  
  <label for="color">COLOR</label>
  <select name="cat[color]" id="color">
  <option disabled selected>-- select a color--</option>
  <% Cat::CAT_COLOR.each do |color| %>
    <option value="<%color%>%">
    <%=color%>
    </option>

  <%end%>
  <br>

  <label for="birth_date">BIRTH DATE:</label>

  <input type="date" id="birth_date" name="cat[birth_date]"
       value="<%cat.birth_date%>"
       min="2000-01-01" max="2020-10-11">

  <br>


  <label for="description">DESCRIPTION:<textarea id="description" name="cat[description]">
  <%= cat.description%></textarea></label>


  <button type="button" >Click Me!</button>

</form>

